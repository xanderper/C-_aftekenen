<Window x:Class="MemoryUi.Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="Yellow"
        Title="Name and Pairs Dialog" Height="300" Width="400">
        
    <Grid>
        <Label Content="Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"/>
        <TextBox x:Name="nameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="80,20,0,0"/>

        <Label Content="Pairs:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,60,0,0"/>
        <TextBox x:Name="pairsTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="80,60,0,0"/>
        
        <Button Content="OK" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Margin="0,0,20,20" IsDefault="True" Click="OK_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Margin="0,0,100,20" IsCancel="True" Click="Cancel_Click" />
    </Grid>
</Window>
